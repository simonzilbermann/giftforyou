<script>
 function upwork(){
const wid=document.getElementById("sku").value;
const name=document.getElementById("nameu").value;
const email=document.getElementById("emailu").value;
const address=document.getElementById("addressu").value;
const city=document.getElementById("cityu").value;
const voted=document.getElementById("voted").value;
fetch('/work/upwork',{ method:'POST',
        body:new URLSearchParams({
            wid,
            name,
            email,
            address,
            city,
            voted
        })
        }).then((res)=>{
            return res.json()}).then((data)=>{
                alert(data.msg);
                if(data.msg==1);
                location.reload();
            })
    }

function inswork(){
const name=document.getElementById("name").value;
const email=document.getElementById("email").value;
const address=document.getElementById("address").value;
const city=document.getElementById("city").value;
    fetch('/work/saveworkers',{ method:'POST',
        body:new URLSearchParams({
            name,
            email,
            address,
            city
        })
        }).then((res)=>{
            return res.json()}).then((data)=>{
                alert(data.msg);
                location.reload();
            })

}


  function Del(wid){
  fetch(`/work/del/${wid}`,{method:'GET'}).then((res)=>{
            return res.json()}).then((data)=>{    
                location.reload();
                })
  }

</script>

