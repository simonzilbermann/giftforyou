<script>
  function resetvote(){
    const pid=document.getElementById("pidu").value;
    fetch('/pres/resetvote',{ method:'POST',
        body:new URLSearchParams({
            pid
        })
    }).then((res)=>{ return res.json()}).then((data)=>{
                alert(data.msg);
                window.location.reload();
    })
  }
</script>

<script>
